{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "styles.scss",
    "node_modules",
    "webpack.config.js",
    "./dist/**/*",
  ]
}