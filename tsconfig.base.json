{
    "compilerOptions": {  
      "strict": true,
      "esModuleInterop": true,      
      "skipLibCheck": true,
      "checkJs": true,  
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,      
      "allowSyntheticDefaultImports": true,      
      "sourceMap": true,      
      "noImplicitAny": true,
      "jsx": "react",
      "emitDeclarationOnly": true,
      "paths": {
        "react": ["./node_modules/@types/react"]
      }
    },
    "include": [
      "src/**/*",
      "src/Components/**/stories/*"
    ],
    "exclude": [
      "StillToBuild", // TODO: TIDY UP HERE
      "styles.scss", 
      "node_modules",    
      "webpack.config.js",
      "./dist/**/*",
    ]
}